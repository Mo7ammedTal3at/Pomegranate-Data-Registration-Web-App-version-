@model IEnumerable<NoorEl7abeebCompanyWebApp.Models.MyModels.Payment>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@section Styles {
    @*@Styles.Render("~/Content/AdminLTE/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css")*@
@Styles.Render("~/Content/datatables/css/dataTables.bootstrap.min.css")
@Styles.Render("~/Content/datatables/css/buttons.bootstrap.css")


}
<p>
    @Html.ActionLink("دفع مبالغ مالية", "Create", null, new { @class = "btn btn-primary" })
</p>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">المدفوعــــات</h3>
                    <button class="btn btn-primary" onclick="printFunc()">طباعة</button>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="customers" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Customer.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Money)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Date)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Notes)
                                </th>
                                @*<th></th>*@
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.ActionLink(item.Customer.Name, "Details", "Customers", new { id = item.Customer.Id }, null)
                                    </td>
                                    <td class="bg-success">
                                        @Html.DisplayFor(modelItem => item.Money)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Date)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Notes)
                                    </td>
                                    @*<td>
                                        @Html.ActionLink("تعديل", "Edit", new { id = item.Id },new { @class="btn btn-warning"}) |
                                        @Html.ActionLink("تفاصيل", "Details", new { id = item.Id }, new { @class = "btn btn-info" }) |
                                        @Html.ActionLink("حذف", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                                    </td>*@
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
@section Scripts {
    @*@Scripts.Render("~/Content/AdminLTE/bower_components/datatables.net/js/jquery.dataTables.min.js")*@
    @*@Scripts.Render("~/Content/AdminLTE/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js")*@
    @Scripts.Render("~/Scripts/Datatables/jquery.dataTables.js")
    @Scripts.Render("~/Scripts/Datatables/dataTables.bootstrap.js")
    @Scripts.Render("~/Scripts/Datatables/dataTables.buttons.js")
    @Scripts.Render("~/Scripts/Datatables/buttons.print.js")
    @Scripts.Render("~/Scripts/plugin.js")
    <script>
        function printFunc() {
            var divToPrint = document.getElementById('customers');
            style = "\
        @@media print{\
            * {\
                -webkit-box-sizing: border-box;\
                -moz-box-sizing: border-box;\
                box-sizing: border-box;\
            }\
    a{\
    color:#000;text-decoration:none;}\
    \
            body {\
                border: 1px #000000 double;\
                margin: 5px;\
                padding: 10px;\
                direction: rtl;\
            }\
    \
            table {\
                border-collapse: collapse;\
                border: #000 solid 1px;\
                font-family: Tahoma, Geneva, sans-serif;\
                width: 80%;\
                margin: auto;\
            }\
    \
            table th {\
                background-color: #333;\
                color: #ffffff;\
                font-weight: bold;\
                padding: 15px;\
            }\
    \
            table td { padding: 15px; }\
    \
            table thead td {\
                background-color: #54585d;\
                color: #ffffff;\
                font-weight: bold;\
                font-size: 10px;\
                border: 1px solid #54585d;\
            }\
            \
            table tbody td {\
                color: #636363;\
    font-size: 10px;\
                border: 1px solid #dddfe1;\
            }\
            \
            table tbody tr { background-color: #f9fafb; }\
            \
            table tbody tr:nth-child(odd) { background-color: #ffffff; }\
            \
            .companyName {\
                padding: 20px;\
                font-size: xx-large;\
                font-weight: bold;\
                text-align: center;\
                width: 100%;\
                font-family: Tahoma, Geneva, sans-serif;\
            }\
            \
            .documentTitle {\
                padding: 10px;\
                background-color: #eee;\
                font-size: medium;\
                font-weight: bold;\
                text-align: center;\
                width: 100%;\
                font-family: Tahoma, Geneva, sans-serif;\
            }\
            \
            .noPrint { display: none; }\
        }";
            htmlToPrint = divToPrint.outerHTML;

            newWin = window.open("");
            newWin.document.write(
                '<html><head><link href="../../Content/PrintStyle.css" media="print" rel="stylesheet" /></head><body>');
            newWin.document.write("<h1 class='companyName'>شركـــة نــــــور الحبيــــب</h1>");
            newWin.document.write("<h3 class='documentTitle'>تقرير بالمدفوعات للعملاء</h3>");
            newWin.document.write("<style>" + style + "</style>");
            newWin.document.write(htmlToPrint);
            newWin.document.write("</body></html>");

            newWin.print();
            newWin.close();
        }
    </script>
}
